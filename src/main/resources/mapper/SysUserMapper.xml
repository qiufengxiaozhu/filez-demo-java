<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.filez.demo.dao.SysUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.filez.demo.entity.SysUserEntity">
        <id column="id" property="id" />
        <result column="display_name" property="displayName" />
        <result column="email" property="email" />
        <result column="photo_url" property="photoUrl" />
        <result column="name" property="name" />
        <result column="password" property="password" />
        <result column="job_title" property="jobTitle" />
        <result column="org_name" property="orgName" />
        <result column="org_id" property="orgId" />
    </resultMap>

    <!--  根据用户名密码，查询用户信息  -->
    <select id="selectOneByNameAndPassword" resultMap="BaseResultMap">
        select * from sys_user where name = #{username} and password = #{password}
    </select>
</mapper>
